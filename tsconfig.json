{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/*.test.ts"]
}
