{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/*.test.ts"]
}
